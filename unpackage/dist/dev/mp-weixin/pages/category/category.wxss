.header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
}
.header .search {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.contentContainer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: calc(100vh - 104rpx);
}
.leftContainer {
  width: 20%;
  background-color: pink;
}
.leftContainer .navScroll {
  height: 100%;
}
.leftContainer .navScroll .navItem {
  position: relative;
  font-size: 26rpx;
  text-align: center;
  line-height: 80rpx;
}
.rightContainer {
  width: 80%;
}
.rightContainer .rightHeader {
  height: 60rpx;
  background-color: skyblue;
}
.rightContainer .rightHeader .navScroll {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  white-space: nowrap;
}
.rightContainer .rightHeader .navScroll .navItem {
  display: inline-block;
  margin: 8rpx 10rpx;
  font-size: 28rpx;
  padding: 14rpx;
  height: 44rpx;
  line-height: 24rpx;
  text-align: center;
  border-radius: 20rpx;
  background-color: #C0C0C0;
  box-sizing: border-box;
}
.rightDropDown {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  height: 60rpx;
  margin-top: 10rpx;
  background-color: pink;
}
.rightDropDown .dropDown {
  width: 100%;
  height: 100%;
}
.rightDropDown .dropDown .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100%;
  line-height: 40rpx;
}
.rightDropDown .filter {
  width: 30%;
  height: 40rpx;
  display: inline-block;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
}
.rightContent {
  background-color: red;
  height: calc(100vh - 136rpx);
}
.rightContent .navScroll {
  height: 100%;
}
.rightContent .navScroll .navItem {
  margin: 10rpx;
  background-color: pink;
}

